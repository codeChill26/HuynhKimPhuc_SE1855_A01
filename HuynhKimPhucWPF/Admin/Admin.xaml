<Window x:Class="WPFApp.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Management - Admin" Height="500" Width="800">
    <Grid Background="#f4f4f4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >
            <TextBlock Text="Welcome, Employee!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Manage Customers" Click="ManageCustomers_Click" Height="40" FontSize="16"/>
            <Button Content="Manage Products" Click="ManageProducts_Click" Height="40" FontSize="16"/>
            <Button Content="Create/View Orders" Click="ManageOrders_Click" Height="40" FontSize="16"/>
            <Button Content="View Reports" Click="ViewReports_Click" Height="40" FontSize="16"/>
            <Button Content="Logout" Click="Logout_Click" Height="40" FontSize="16" Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Window>
