<Window x:Class="WPFApp.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Products" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtSearchProduct" Width="200" Margin="0,0,10,0" />
            <Button Content="Search" Width="100"/>
        </StackPanel>

        <!-- ListView -->
        <ListView x:Name="lvProducts" Grid.Row="1" Margin="0,10,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product ID" DisplayMemberBinding="{Binding ProductID}" Width="80"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding ProductName}" Width="150"/>
                    <GridViewColumn Header="CategoryID" DisplayMemberBinding="{Binding CategoryID}" Width="100"/>
                    <GridViewColumn Header="Unit Price" DisplayMemberBinding="{Binding UnitPrice}" Width="100"/>
                    <GridViewColumn Header="Stock" DisplayMemberBinding="{Binding UnitsInStock}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Add" Width="100" Margin="5"/>
            <Button Content="Edit" Width="100" Margin="5" />
            <Button Content="Delete" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
